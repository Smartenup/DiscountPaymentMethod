@model Nop.Plugin.DiscountRules.PaymentMethod.Models.RequirementModel
@{
	Layout = "";
}



<script type="text/javascript">
	$(document).ready(function () {
        $('#savepaymentmethodrequirement@(Model.RequirementId)').click(function () {
            var paymentMethod = $("#@Html.IdFor(model => model.PaymentMethodSystemName)").val();
			var discountId = @Model.DiscountId;
			var requirementId = @Model.RequirementId;

			var postData = {
				DiscountId: discountId,
				RequirementId: requirementId,
                PaymentMethodSystemName: paymentMethod
			};
			addAntiForgeryToken(postData);

			$.ajax({
				cache: false,
				type: "POST",
				url: "@(Url.Action("Configure", "DiscountRulesPaymentMethod"))",
				data: postData,
				success: function (data, textStatus, jqXHR) {
					var $alertInfoEl = $("#savepaymentmethodrequirementAlert-info");
                    let response = jqXHR.responseJSON;
                    if (response instanceof Object && response.hasOwnProperty('Errors')) {
                        var errorMessages = '';
                        $.each(response.Errors, function (i, error) {
                            errorMessages += error;
                            if (response.Errors.length - 1 != i)
                                errorMessages += '</br>';
                        });
                        $alertInfoEl.html(errorMessages);
						$("#savepaymentmethodrequirementAlert").click();

                        return;
                    } 

                    $('#pnl-save-requirement-result@(Model.RequirementId)').fadeIn("slow").delay(1000).fadeOut("slow");
                    //notify parent if it's a new requirement
                    @if (Model.RequirementId == 0)
                    {
                        <text>$("#discountRequirementContainer").trigger('nopnewdiscountruleadded', [data.NewRequirementId]);</text>
                    }
										
				},
				error: function (jqXHR, textStatus, errorThrown) {
					var $alertInfoEl = $("#savepaymentmethodrequirementAlert-info");

                    // display default error
                    $alertInfoEl.html('@T("Admin.Promotions.Discounts.Requirements.FailedToSave")');

					$("#savepaymentmethodrequirementAlert").click();
                                                            
				}
			});
		});
	});
</script>

<div class="form-group row">
    <div class="col-md-3 requirement-label-col">
        <nop-label asp-for="PaymentMethodSystemName" />
    </div>
    <div class="col-md-9 requirement-data-col">
        <div class="requirement-data-input">
			<nop-select asp-for="PaymentMethodSystemName" asp-items="Model.AvailablePaymentMethodSystemNames" />
        </div>
        <div class="requirement-data-buttons">
            <button type="button" id="savepaymentmethodrequirement@(Model.RequirementId)" class="btn btn-primary">@("Admin.Common.Save")</button>
        </div>
    </div>
</div>
<div class="form-group row">
    <div class="offset-md-3 col-md-9 requirement-messages-col">
        <div id="pnl-save-requirement-result@(Model.RequirementId)" style="display: none;" class="text-green margin-t-5">
            @("Admin.Promotions.Discounts.Requirements.Saved")
        </div>
    </div>
</div>
<nop-alert asp-alert-id="savepaymentmethodrequirementAlert" />


